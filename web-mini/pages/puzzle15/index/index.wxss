.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-header {
  width: 100%;
  max-width: 400px;
  margin-bottom: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 32px;
  font-weight: bold;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
}

.stats {
  display: flex;
  gap: 10px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 8px 12px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.stat-label {
  font-size: 12px;
  color: #666;
  margin-bottom: 4px;
}

.stat-value {
  font-size: 18px;
  font-weight: bold;
  color: #667eea;
}

.best-scores {
  width: 100%;
  max-width: 400px;
  text-align: center;
  margin-bottom: 15px;
}

.best-text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.9);
}

.game-board {
  width: 100%;
  max-width: 400px;
  margin-bottom: 20px;
}

.board-grid {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 10px;
  backdrop-filter: blur(10px);
}

.board-row {
  display: flex;
  justify-content: center;
  margin-bottom: 8px;
}

.board-row:last-child {
  margin-bottom: 0;
}

.tile {
  width: 80px;
  height: 80px;
  margin-right: 8px;
  background: #fff;
  border-radius: 8px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  transition: all 0.2s;
}

.tile:last-child {
  margin-right: 0;
}

.tile.empty {
  background: transparent;
  box-shadow: none;
}

.tile:active:not(.empty) {
  transform: scale(0.95);
  opacity: 0.8;
}

.tile-number {
  font-size: 28px;
  font-weight: bold;
  color: #667eea;
  user-select: none;
}

.game-controls {
  width: 100%;
  max-width: 400px;
  display: flex;
  gap: 15px;
  margin-bottom: 20px;
}

.control-btn {
  flex: 1;
  height: 44px;
  line-height: 44px;
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.control-btn.secondary {
  background: rgba(255, 255, 255, 0.7);
  color: #666;
}

.control-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.game-over {
  width: 100%;
  max-width: 400px;
  text-align: center;
  margin-bottom: 20px;
}

.game-over-text {
  font-size: 24px;
  font-weight: bold;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  animation: bounce 0.5s ease-in-out;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}

.game-rules {
  width: 100%;
  max-width: 400px;
  background: rgba(255, 255, 255, 0.9);
  padding: 15px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.rules-title {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.rules-text {
  display: block;
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

/* 响应式设计 */
@media screen and (max-width: 400px) {
  .tile {
    width: 70px;
    height: 70px;
  }

  .tile-number {
    font-size: 24px;
  }

  .title {
    font-size: 24px;
  }
}
